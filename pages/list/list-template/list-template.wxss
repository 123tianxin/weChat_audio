}

.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align:middle;
}

.post-date{
    margin-left:20rpx;
    vertical-align:middle;
    margin-bottom:5px;
    font-size:26rpx;
}

.post-title{
    font-size:34rpx;
    font-weight:600;
    color:#333;
    margin-bottom:10px;
    margin-left:10px;
}

.post-image{
    /* margin-left:16rpx; */
    width:100%;
    height:400rpx;
    margin:auto 0;
     /* margin-top:1px;  */
