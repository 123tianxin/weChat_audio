}

.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left:20rpx;
    letter-spacing:2rpx;
    line-height:40rpx;
}

.post-like{
    font-size:13px;
    flex-direction:row;
    line-height:16px;
    margin-left:10px;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right:8px;
    vertical-align:middle;
}

.post-like-font{
    vertical-align:middle;
    margin-right:20px;
